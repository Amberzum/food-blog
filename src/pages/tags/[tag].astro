---
import BlogLayout from '../../layouts/BlogPost.astro';

export async function getStaticPaths() {
    const allPosts = await Astro.glob('../../content/blog/*.md');
  return [
    { params: { tag: "bread" }, props: {posts: allPosts}},
    { params: { tag: "sourdough" }, props: {posts: allPosts}},
    { params: { tag: "recipes" }, props: {posts: allPosts}},
  ];
}

const { tag } = Astro.params;
const { posts } = Astro.props;
const filteredPosts = posts.filter((post) => post.frontmatter.tags?.includes(tag));
---
<BlogLayout title={tag!} posts={filteredPosts}>
  <p>Posts tagged with {tag}</p>
  <ul>
    {filteredPosts.map((post) => <li><a href={post.url}>{post.frontmatter.title}</a></li>)}
  </ul>
</BlogLayout>